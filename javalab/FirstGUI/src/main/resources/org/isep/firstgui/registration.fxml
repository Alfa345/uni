<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.firstgui.RegistrationController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Create an account" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                <HBox spacing="10">
                    <Label text="Name*" />
                    <TextField fx:id="nameField" promptText="Name and Last name" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Phone number*" />
                    <TextField fx:id="phoneField" promptText="Phone number" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Email" />
                    <TextField fx:id="emailField" promptText="Email" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Password*" />
                    <PasswordField fx:id="passwordField" promptText="Password" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Confirm password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
                </HBox>

                <HBox alignment="CENTER" spacing="20">
                    <Button text="Register" onAction="#handleRegisterButton" />
                    <Button text="Clear" onAction="#handleClearButton" />
                </HBox>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
