<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.firstgui.LoginPageController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Authentification Form" />
                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Login (your email):" />
                    <TextField fx:id="emailField" />
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Password:" />
                    <PasswordField fx:id="passwordField" />
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button text="Login" onAction="#handleLogin" />
                    <Button text="I dont have an account" onAction="#handleOpenRegistration" />
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
